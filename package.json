{
  "name": "speechly-demos",
  "private": "true",
  "version": "1.0.0",
  "description": "",
  "engines": {
    "node": "^14.16.1",
    "npm": "^7.7.6"
  },
  "main": "index.js",
  "workspaces": [
    "./common/*",
    "./demos/*"
  ],
  "scripts": {
    "start": "node server.js",
    "build": "webpack --mode production --config ./webpack.config.js",
    "dev": "webpack serve --mode development --progress --hot --config ./webpack.config.js",
    "pre-commit-test": "jest --ci --forceExit",
    "jest-watch": "jest --watch",
    "lint": "eslint demos/** --ext .js,.ts,.tsx",
    "lint-fix": "eslint --fix demos/** --ext .js,.ts,.tsx",
    "prepare": "husky install",
    "generate-project": "mkdir ./demos/${NAME} && cp -a ./template-speechly-demos/. ./demos/${NAME}"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@speechly/browser-ui": "^3.13.1",
    "@speechly/react-client": "^0.0.21",
    "@speechly/react-ui": "^2.0.1",
    "express": "^4.17.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-router-dom": "^5.2.0",
    "serve": "^11.3.2",
    "typescript": "^4.2.4"
  },
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@babel/preset-env": "^7.14.2",
    "@babel/preset-react": "^7.13.13",
    "@babel/preset-typescript": "^7.13.0",
    "@types/react": "^17.0.5",
    "@types/react-dom": "^17.0.3",
    "@types/react-router": "^5.1.14",
    "@types/react-router-dom": "^5.1.7",
    "@typescript-eslint/eslint-plugin": "^4.23.0",
    "@typescript-eslint/parser": "^4.23.0",
    "copy-webpack-plugin": "^9.0.1",
    "cross-env": "^7.0.3",
    "css-loader": "^5.2.4",
    "eslint": "^7.26.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.3.1",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "react-test-renderer": "^17.0.2",
    "style-loader": "^2.0.0",
    "ts-loader": "^9.1.2",
    "webpack": "^5.36.2",
    "webpack-cli": "^4.7.0",
    "webpack-dev-server": "^3.11.2"
  },
  "jest": {
    "setupFiles": [
      "<rootDir>/__mocks__/jest.stubs.js"
    ],
    "moduleNameMapper": {
      "\\.(css|less)$": "<rootDir>/__mocks__/styleMock.js"
    }
  }
}
